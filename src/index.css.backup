/* NFT SIDE PANEL LAYOUT - "Sorcerers of Silence" */

/* Modal with side panel support */
.trading-card-modal.with-side-panel {
  max-width: 95vw !important;
  width: 1400px !important;
  display: flex !important;
  flex-direction: column !important;
}

/* Main content container - flexbox layout */
.modal-content-container {
  display: flex !important;
  flex: 1 !important;
  gap: 20px !important;
  overflow: hidden !important;
}

/* Main content area */
.main-content {
  flex: 1 !important;
  overflow-y: auto !important;
  background: transparent !important;
  color: var(--bone-white) !important;
}

/* NFT Side Panel */
.nft-side-panel {
  position: relative !important; /* For absolute positioning of preview modal */
  width: 400px !important;
  min-width: 400px !important;
  background: var(--void-gradient) !important;
  border: 2px solid var(--spectral-purple) !important;
  border-radius: 12px !important;
  box-shadow: 
    0 0 30px rgba(45, 27, 105, 0.8),
    inset 0 1px 0 rgba(168, 85, 247, 0.2) !important;
  animation: hauntedGlow 4s ease-in-out infinite !important;
  overflow: hidden !important;
  display: flex !important;
  flex-direction: column !important;
}

/* NFT Panel Header */
.nft-panel-header {
  background: var(--spectral-gradient) !important;
  color: var(--bone-white) !important;
  padding: 16px !important;
  display: flex !important;
  justify-content: space-between !important;
  align-items: center !important;
  border-bottom: 1px solid var(--doom-orange) !important;
}

.nft-panel-header h3 {
  margin: 0 !important;
  font-family: 'Courier New', monospace !important;
  text-transform: uppercase !important;
  letter-spacing: 1px !important;
  text-shadow: 0 0 10px rgba(168, 85, 247, 0.8) !important;
}

.panel-close-button {
  background: transparent !important;
  border: 1px solid var(--bone-white) !important;
  color: var(--bone-white) !important;
  width: 30px !important;
  height: 30px !important;
  border-radius: 50% !important;
  cursor: pointer !important;
  font-size: 16px !important;
  transition: all 0.3s ease !important;
}

.panel-close-button:hover {
  background: var(--blood-red) !important;
  border-color: var(--blood-red) !important;
  box-shadow: 0 0 15px rgba(139, 0, 0, 0.8) !important;
}

/* NFT Panel Content */
.nft-panel-content {
  flex: 1 !important;
  padding: 20px !important;
  overflow-y: auto !important;
  background: transparent !important;
}

/* NFT Toggle Button in Header */
.nft-toggle-button {
  background: var(--spectral-gradient) !important;
  border: 1px solid var(--spectral-purple) !important;
  color: var(--bone-white) !important;
  padding: 8px 16px !important;
  border-radius: 6px !important;
  font-family: 'Courier New', monospace !important;
  text-transform: uppercase !important;
  letter-spacing: 1px !important;
  margin-right: 12px !important;
  transition: all 0.3s ease !important;
  cursor: pointer !important;
  font-size: 12px !important;
  font-weight: bold !important;
}

.nft-toggle-button:hover {
  background: var(--spectral-purple) !important;
  box-shadow: 0 0 15px rgba(168, 85, 247, 0.8) !important;
  transform: translateY(-1px) !important;
}

.nft-toggle-button.active {
  background: var(--doom-orange) !important;
  border-color: var(--doom-orange) !important;
  color: var(--void-black) !important;
  box-shadow: 0 0 15px rgba(184, 134, 11, 0.8) !important;
}

/* Remove NFT section from main content when panel is open */
.trading-card-modal.with-side-panel .moment-mint {
  display: none !important;
}

/* NFT PREVIEW MODAL POSITIONING IN SIDE PANEL */

/* When preview is shown in side panel, position it over the panel */
.nft-side-panel .fixed.inset-0 {
  position: absolute !important;
  inset: 0 !important;
  background: rgba(10, 10, 10, 0.95) !important;
  backdrop-filter: blur(8px) !important;
  z-index: 100 !important;
}

/* Preview modal content in side panel */
.nft-side-panel .fixed.inset-0 > div {
  background: var(--void-gradient) !important;
  border: 2px solid var(--doom-orange) !important;
  color: var(--bone-white) !important;
  max-width: 95% !important;
  max-height: 85% !important;
  overflow-y: auto !important;
  box-shadow: 0 0 30px rgba(184, 134, 11, 0.8) !important;
  margin: auto !important;
}

/* Preview modal header in side panel */
.nft-side-panel .fixed.inset-0 h3 {
  color: var(--bone-white) !important;
  text-shadow: 0 0 8px rgba(184, 134, 11, 0.6) !important;
}

/* Preview modal buttons in side panel */
.nft-side-panel .fixed.inset-0 button {
  background: var(--shadow-gray) !important;
  color: var(--bone-white) !important;
  border: 1px solid var(--doom-orange) !important;
}

.nft-side-panel .fixed.inset-0 button:hover {
  background: var(--doom-orange) !important;
  color: var(--void-black) !important;
}

/* Close button in preview */
.nft-side-panel .fixed.inset-0 button[class*="text-2xl"] {
  background: transparent !important;
  border: none !important;
  color: var(--doom-orange) !important;
  font-size: 20px !important;
}

.nft-side-panel .fixed.inset-0 button[class*="text-2xl"]:hover {
  color: var(--blood-red) !important;
  background: transparent !important;
}

/* COMPACT PREVIEW MODAL STYLING FOR SIDE PANEL */

/* Make preview modal content more compact */
.nft-side-panel .fixed.inset-0 .p-6 {
  padding: 12px !important;
}

/* Compact header */
.nft-side-panel .fixed.inset-0 h3 {
  font-size: 16px !important;
  margin-bottom: 8px !important;
}

/* Compact image */
.nft-side-panel .fixed.inset-0 img {
  margin-bottom: 12px !important;
}

/* Compact buttons */
.nft-side-panel .fixed.inset-0 button:not([class*="text-2xl"]) {
  padding: 8px 12px !important;
  font-size: 12px !important;
  margin: 4px 0 !important;
}

/* Specific button text overrides */
.nft-side-panel .fixed.inset-0 button {
  font-size: 11px !important;
  line-height: 1.2 !important;
  white-space: nowrap !important;
  overflow: hidden !important;
  text-overflow: ellipsis !important;
}

/* Try Another Variation button */
.nft-side-panel .fixed.inset-0 button[class*="w-full"] {
  padding: 10px 8px !important;
  font-size: 11px !important;
}

/* Compact close and create buttons section */
.nft-side-panel .fixed.inset-0 .flex.gap-3 button {
  padding: 8px 10px !important;
  font-size: 10px !important;
  font-weight: 600 !important;
}

/* Make variation number text smaller */
.nft-side-panel .fixed.inset-0 .text-xs {
  font-size: 9px !important;
}

/* Compact spacing between elements */
.nft-side-panel .fixed.inset-0 .mb-4 {
  margin-bottom: 8px !important;
}

.nft-side-panel .fixed.inset-0 .mt-4 {
  margin-top: 8px !important;
}

/* Scrollable content area */
.nft-side-panel .fixed.inset-0 > div {
  display: flex !important;
  flex-direction: column !important;
}

.nft-side-panel .fixed.inset-0 .p-6 {
  flex: 1 !important;
  overflow-y: auto !important;
  max-height: calc(85vh - 40px) !important;
}

/* Responsive - stack on mobile */
@media (max-width: 1200px) {
  .trading-card-modal.with-side-panel {
    flex-direction: column !important;
    width: 95vw !important;
    max-height: 95vh !important;
  }
  
  .modal-content-container {
    flex-direction: column !important;
  }
  
  .nft-side-panel {
    width: 100% !important;
    min-width: unset !important;
    max-height: 400px !important;
  }
  
  /* On mobile, preview modal should still cover full screen */
  .nft-side-panel .fixed.inset-0 {
    position: fixed !important;
    inset: 0 !important;
  }
}


@media (max-width: 640px) {
  body {
    -webkit-text-size-adjust: 100%;
    -webkit-tap-highlight-color: transparent;
  }
  
  /* Prevent horizontal scroll */
  html, body {
    overflow-x: hidden;
  }
  
  /* Make modals full screen on mobile */
  .modal-content {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    border-radius: 0 !important;
    max-height: 100vh !important;
    margin: 0 !important;
  }
}
